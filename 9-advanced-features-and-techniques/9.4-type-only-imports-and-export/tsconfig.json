{
  "compilerOptions": {
    "module": "ES2022", // Use ES2022 module syntax. Necessary in this folder since verbatimModuleSyntax is true and we want to use ES exports
    "verbatimModuleSyntax": true, // Use the exact module syntax from the source file. So when true, must use "import type" syntax for type-only imports
    "moduleResolution": "bundler", // Specify how TypeScript looks up a file from a given module specifier
    "isolatedModules": true
  }
}
